<div class="frmbdy">
<apex:form >
<apex:inputHidden value="{!locator_type}" id="locator_type"/>
<apex:inputHidden value="{!locator_product}" id="locator_product"/>
<apex:inputHidden value="{!locator_distance}" id="locator_distance"/>

<div class="mform">
<table cellpadding="3" cellspacing="0" border="0" width="500">
<tr><td></td><td><apex:outputPanel rendered="{!zip_error<>NULL}">
<div id="location_error"><apex:outputText escape="false" value="{!$Label.outputLabel_ZipCodeError}" /></div><br/>
</apex:outputPanel></td><td></td></tr>
<tr><td width="75"><apex:outputLabel value="{!$Label.outputLabel_ZipCode}" for="origin_zipcode"/></td><td width="80"><apex:inputText value="{!origin_zipcode}" id="origin_zipcode" size="10" onKeyPress="return submitZipForm(event)"/></td><td width="340">
<apex:commandButton value="{!$Label.outputLabel_Search}" action="{!searchByZip}" style="background-image: none" id="SearchZip"/>&nbsp;
<apex:commandButton value="{!$Label.outputLabel_Clear}" action="{!clearZip}" style="background-image: none"/></td></tr>
</table>
</div>

<div class="mform">
<table cellpadding="3" cellspacing="0" border="0" width="500">
<tr><td width="100"></td><td width="200"><apex:outputPanel rendered="{!city_error<>NULL}">
<apex:outputText escape="false" value="{!$Label.outputLabel_CityError}" /><br/>
</apex:outputPanel></td><td width="200"></td></tr>
<tr><td width="75"><apex:outputLabel value="{!$Label.outputLabel_City}" for="origin_city"/></td><td width="200"><apex:inputText value="{!origin_city}" id="origin_city" size="25" onKeyPress="return submitCityForm(event)"/></td>
<td width="200"><apex:commandButton value="{!$Label.outputLabel_Search}" action="{!searchByCity}" style="background-image: none" id="SearchCity"/>&nbsp;
<apex:commandButton value="{!$Label.outputLabel_Clear}" style="background-image: none" /></td>
</tr></table>
</div>

</apex:form>
<br/><br/>
<table border="0" cellpadding="0" cellspacing="0" width="500" id="mqresults">
<tr>
<td width="175"><div id="TextResults"></div></td>
<td>
<div id="mapWindow" style="width:325px; height:500px;"></div>
</td>
</tr>

</table>

<apex:outputPanel rendered="{!search_message<>NULL}">
<div id="location_error"><apex:outputText escape="false" value="{!$Label.Cannot_find_your_location}" /></div><br/>
</apex:outputPanel>
</div>


<apex:outputText escape="false" value="{!map_js}" />

</apex:page>