<apex:page standardController="Case" extensions="ctrlBINA_CaseMaterialEmail">

  <apex:form >
  <apex:pageMessages ></apex:pageMessages>
  <apex:pageBlock title="Enter Details" >
  <apex:pageBlockSection id="Distributor" >

            <apex:inputField label="Distributor" value="{!acc.Distributor__c}" >
            <apex:actionSupport event="onchange" action="{!getContacts}" reRender="Distributor" status="conStatus"/>
            </apex:inputField>
            <apex:selectList id="con" value="{!selectedConId}" label="Select Contact" multiselect="false" size="1" style="margin-left:0px;width:250px;height:25px;" > 
                              <apex:selectOptions value="{!contactForSelectedAcc}"/>
            </apex:selectList>
             <apex:actionStatus id="conStatus" 
                           startText=" Please Wait while the Contact is getting populated..." 
                           stopText="" startStyle="padding-left:12em; color:brown !important;"/>
  </apex:pageBlockSection>
  <apex:pageblockSection id="Product" columns="1">
<apex:commandButton value="Search" action="{!searchProductValue}" status="cStatus" reRender="Product"  >
<apex:outputLabel value="Search Product" styleClass="labelCol" style="padding-LEFT:11em;"/> <apex:inputText label="Search Product" value="{!searchProduct}" />
</apex:commandButton>
<apex:actionStatus id="cStatus" 
                           startText=" Please Wait..." 
                           stopText="" startStyle="padding-LEFT:18em;"/>
<apex:outputLabel id="NoProduct" rendered="{!noProduct }" styleClass="labelCol" value=" No Product Found... Please search other product" style="padding-LEFT:9em; color:Brown;"></apex:outputLabel>
<c:BI_NA_MultiSelectMaterials leftLabel="Materials Available"
                leftOption="{!AllMaterials}"
                rightLabel="Materials Selected"
                rightOption="{!SelectedMaterials}"
                size="10"
                width="550px" />
</apex:pageblockSection>
<apex:pageBlockSection >
<apex:inputTextArea value="{!shippingInformation}" label="Shipping Instructions" style="width:250px;height:80px;"/>
</apex:pageBlockSection>
  <apex:outputLabel rendered="false">
  Current Owner is :  <apex:outputField value="{!Case.OwnerId}" style="display:none;"></apex:outputField>
  </apex:outputLabel>
  <br/>
  <apex:pageBlockButtons location="bottom">
  <apex:commandButton value="Send Email" action="{!SendEmail}" />
  <apex:commandButton value="Cancel" action="{!Cancel}"/>
  </apex:pageBlockButtons>
   </apex:pageBlock>
  </apex:form>
</apex:page>