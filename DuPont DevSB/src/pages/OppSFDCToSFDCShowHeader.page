<apex:page standardController="Opportunity" extensions="ctrlOppSFDCToSFDCShowHeader" tabstyle="Opportunity" >
    <head>
        <apex:includeScript value="{!URLFOR($Resource.Jquery_1_8_11, 'js/jquery-1.5.1.min.js')}" /><!-- <AB20140926> included JQuery to set the related list anchor tags which are generated Dynamically with target value as _Parent -->
        <apex:includeScript value="{!URLFOR($Resource.jquery_tools_min_1_2_7)}" /> 
    </head>
    <apex:variable id="headerInfo" rendered="true" value="{!pnrcShowHeaderObj}" var="pnrcSHObj"/>
         <apex:outputText style="background:#FFFFFF" rendered="{! !pnrcSHObj.isShared}">
                    <i>
                        This Opportunity has not been shared.
                    </i>
                </apex:outputText>
    <apex:pageBlock rendered="{! pnrcSHObj.isShared}">
        <table style='width:100%'>
            <tr >
                <th style="background:#f2f3f3;border-width: 0 0 1px 0px;border-color:#e0e3e5;font-size:.9em;font-weight:bold;padding:5px 2px 4px 5px">Connection Name</th>
                <th style="background:#f2f3f3;border-width: 0 0 1px 0px;border-color:#e0e3e5;font-size:.9em;font-weight:bold;padding:5px 2px 4px 5px">Connection Owner</th>
                <th style="background:#f2f3f3;border-width: 0 0 1px 0px;border-color:#e0e3e5;font-size:.9em;font-weight:bold;padding:5px 2px 4px 5px">Status</th>
                <th style="background:#f2f3f3;border-width: 0 0 1px 0px;border-color:#e0e3e5;font-size:.9em;font-weight:bold;padding:5px 2px 4px 5px">Start Date</th>                
                <th style="background:#f2f3f3;border-width: 0 0 1px 0px;border-color:#e0e3e5;font-size:.9em;font-weight:bold;padding:5px 2px 4px 5px">End Date</th>
            </tr>
            
           
                <tr style="background:#ffffff">
                    <td  class=" dataCell" style="background:#ffffff;border-width: 0 0 1px 0px;border-color:#e0e3e5;padding:5px 2px 4px 5px">{!pnrcSHObj.pncObjConnName}&nbsp;</td>
                    <td   class=" dataCell" style="background:#ffffff;border-width: 0 0 1px 0px;border-color:#e0e3e5;padding:5px 2px 4px 5px">{!pnrcSHObj.pncObjConnOwner}&nbsp;</td>
                    <td   class=" dataCell" style="background:#ffffff;border-width: 0 0 1px 0px;border-color:#e0e3e5;padding:5px 2px 4px 5px">{!pnrcSHObj.pnrcObjStatus}&nbsp;</td>
                    <td  class=" dataCell" style="background:#ffffff;border-width: 0 0 1px 0px;border-color:#e0e3e5;padding:5px 2px 4px 5px">{!pnrcSHObj.pnrcObjStartDate}&nbsp;</td>
                    <td   class=" dataCell" style="background:#ffffff;border-width: 0 0 1px 0px;border-color:#e0e3e5;padding:5px 2px 4px 5px">{!pnrcSHObj.pnrcObjEndDate}&nbsp;</td>
                </tr>
            
        </table>
     </apex:pageBlock>
     
    
    <script>
    </script>      
    
</apex:page>